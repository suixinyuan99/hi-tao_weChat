
/* 搜索栏 */
.searchBarBox {
  position: fixed;
  background: #FF6201;
  display: flex;
  height: 120rpx;
  width: 100%;
  top: 0rpx;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.search_arr {
  background: #fff;
  width: 700rpx;
  height: 80rpx;
  border: 1px solid #d0d0d0;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(0, 0, 0, 0.4);
}

.onSearch_arr {
  background: #fff;
  width: 570rpx;
  height: 80rpx;
  border: 1px solid #d0d0d0;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(0, 0, 0, 0.4);
}

.searchIcon {
  padding-left: 20rpx;
  z-index: 2;
  text-align: center;

}

.searchText {
  padding-left: 70rpx;
  color: #101010;
  font-family: Arial;
  font-size: 36rpx;
}

/* 选择框 */
.chooseBar {
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 10;
  position: fixed;
  top: 120rpx; 
  width: 100%;
  border-bottom: 2rpx solid #BBB;
  height: 88rpx;
  text-align: center;
  background: #fff;

}

.chooseBox{
  width: 50%;
}

/* 选择框 */
.data{
  border-radius: 10rpx;
  display: inline-block;
  /* margin-left: 40rpx;
  margin-right: 20rpx; */
  /* width: 100rpx; */
  color: #101010;
  font-size: 30rpx;
  line-height: 88rpx;
  position: relative;
}
.down{
  right: 5rpx;
  top: 10rpx;
  width: 30rpx;
  height: 30rpx;
}



/* 显示区 */

.showBox{
  position: fixed;
  top:208rpx;
  width: 100%;
}


.item{
  width: 100%;
}

.swiper-box {
  display: flex;
  height: auto;
  width: 100%;
  overflow: hidden;
  background-color: rgba(181, 175, 175, 0.11);
}




.info-item {
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flex;
  display: -o-flex;
  display: flex;
  flex-direction: row;
  position: relative;
  /*padding-bottom: 30rpx;
  padding-right:20rpx;*/
  padding: 20rpx 20rpx 10rpx 40rpx;
  background-color: #fff;
  flex-wrap:wrap;
}

.speItem {
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flex;
  display: -o-flex;
  display: flex;
  flex-direction: row;
  position: relative;
  /*padding-bottom: 30rpx;
  padding-right:20rpx;*/
  padding: 20rpx 20rpx 10rpx 40rpx;
  margin:10rpx 5rpx 10rpx 20rpx;
  background-color: #fff;
  border-radius: 20rpx 20rpx 20rpx 20rpx;
  flex-wrap:wrap;
}



.info-item .mask {
  position: absolute;
  height: 220rpx;
  line-height: 280rpx;
  width: 100%;
  text-align: center;
  vertical-align: middle;
  z-index: 990;
  background-color: rgba(255, 255, 255, 0.7);
}


.info-item .mask image {
  /* transform: rotate(-15deg); */
  position: absolute;
  bottom: 0;
  height: 120rpx;
  width: 120rpx;
  right: 60rpx;
}



.leftSide {
  flex: 1;
}

.showPicture {
  position: relative;
  width: 220rpx;
  height: 220rpx;

}

.showPicture image {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.showPicture .tag {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #F3490A;
  border-radius: 0 0 15rpx 15rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
}




.rightSide {
  flex: 1.5;
  margin-left: 20rpx;
  position: relative;
}

.title {
  font-size: 32rpx;
  line-height: 50rpx;
}

.title text {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  width: 95%;
  -webkit-box-orient: vertical;
  align-content: center;
  /*text-indent: -12rpx;*/
}

.priceAndWatch {
  margin: 10rpx 0;
  width: 90%;
  height: 60rpx;
  line-height: 60rpx;
}

.priceAndWatch text {
  font-size: 30rpx;
}

.priceAndWatch .price {
  float: left;
  color: #e73349;
  font-size: 32rpx;
}

.priceAndWatch .watch {
  float: right;
  color: #bbb;
  font-size: 26rpx;
}



.timeCollect {
  position: absolute;
  bottom: 0rpx;
  font-size: 24rpx;
  color: #aaa;
}

.date {
  float: left;
  height: 45rpx;
  line-height: 45rpx;
}

.tag {
  float: left;
}

.tag image {
  margin-left: 66rpx;
  height: 45rpx;
  width: 45rpx;
  margin-right: 10rpx;
}

.noData {
  margin-top: 30%;
  vertical-align: middle;
  text-align: center;
}

.noData .iconfont {
  font-size: 250rpx;
  color: #666;
}

.noData view {
  font-size: 40rpx;
  color: #666;
}

.tips {
  padding: 0 20rpx;
  font-size: 30rpx;
  text-align: center;
  color: #aaa;}